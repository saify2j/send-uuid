<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Redis App</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<style>
  .del:checked+span {
    color: red;
  }

  .card {
    margin-bottom: 10px;
    background: rgb(196, 255, 250)
  }

  body {
    font-family: Ubuntu;
    background: skyblue;
    padding: 20px;
    padding-top: 60px;
  }

  @media (max-width: 979px) {
    body {
      padding-top: 0px;
    }
  }
</style>

<body>

  <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
    <div class="container">
      <a href="/" class="navbar-brand">Redis APP</a>
    </div>
  </div>

  <div class="container" style="padding: 20px;">
    <div class="card">
      <div class="card-body">
        <h3>Generate UUID</h3>
        <div class="row">
            <form method="POST" action="/uuid/new">
              <div class="col-lg-12">
                <div class="form-group">
                  <% if(uuid=='null'){ %>
                  <input id="uuid" class="form-control" type="text" name="task" placeholder="Generate UUID">

                  <% } else{ %>
                  <input id="uuid" class="form-control" type="text" name="task" value="<%= uuid %>"
                    placeholder="Generate UUID">
                  <% } %>
                </div>
              </div>
              <div class="col-lg-6">
                <input type="submit" value="Generate UUID" class="btn btn-flat btn-primary">
              </div>
            </form>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <form method="POST" action="/uuid/send">
                    <% if(uuid=='null'){ %>
                    <input name="send_uuid" type="hidden" placeholder="Generate UUID">
                    <% } else{ %>
                    <input name="send_uuid" type="hidden" value="<%= uuid %>"
                      placeholder="Generate UUID">
                    <% } %>
                    <input type="submit" value="Send" class="btn btn-flat btn-success">
                </form>
              </div>
            </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"></script>
</body>

</html>
